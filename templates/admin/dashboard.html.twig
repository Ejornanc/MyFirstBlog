{% extends "Layouts/base.html.twig" %}

{% block title %}Administration - Blog Professionnel{% endblock %}
{% block head %}
    {{ parent() }}
        <link rel="stylesheet" href="/Css/Admin.css">
{% endblock %}

{% block content %}
    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="admin-title">Administration du Blog</h1>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/" class="btn btn-outline-light">Retour au site</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        {% if app.request.query.get('deleted') %}
            <div class="alert alert-success">
                L'article a été supprimé avec succès.
            </div>
        {% endif %}
        
        {% if app.request.query.get('error') %}
            <div class="alert alert-danger">
                Une erreur s'est produite lors de la suppression de l'article.
            </div>
        {% endif %}
        
        <div class="admin-actions">
            <a href="/admin/article/add" class="btn btn-success">Ajouter un article</a>
        </div>
        
        <h2>Liste des articles</h2>
        
        {% if articles|length > 0 %}
            <div class="table-responsive article-table">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Date de création</th>
                            <th>Dernière modification</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ article.id }}</td>
                                <td>{{ article.title }}</td>
                                <td>{{ article.author }}</td>
                                <td>{{ article.date|date("d/m/Y H:i") }}</td>
                                <td>
                                    {% if article.updatedAt %}
                                        {{ article.updatedAt|date("d/m/Y H:i") }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    {% if article.actif %}
                                        <span class="status-badge status-active">Actif</span>
                                    {% else %}
                                        <span class="status-badge status-inactive">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="article-actions">
                                    <a href="/article/{{ article.slug }}-{{ article.id }}" class="btn btn-sm btn-info" target="_blank">Voir</a>
                                    <a href="/admin/article/edit/{{ article.id }}" class="btn btn-sm btn-primary">Modifier</a>
                                    <a href="/admin/article/delete/{{ article.id }}" class="btn btn-sm btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun article n'a été créé pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}